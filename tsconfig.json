{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["esnext", "esnext.array", "esnext.asynciterable", "esnext.symbol"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": false,
    "target": "ESNEXT",
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
